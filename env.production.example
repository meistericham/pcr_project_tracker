# Production Environment Variables for VPS Hosting

# Application Settings
NODE_ENV=production
VITE_APP_NAME=PCR Project Tracker
VITE_APP_VERSION=1.0.0

# Database Configuration (PostgreSQL)
POSTGRES_DB=pcr_tracker_prod
POSTGRES_USER=pcr_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Supabase Configuration (if using Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Security
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
SESSION_SECRET=another-super-secret-session-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Server Configuration
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=https://yourdomain.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/uploads

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Backup Configuration
BACKUP_PATH=/var/backups/pcr-tracker
BACKUP_RETENTION_DAYS=30
